        function getOpenPosition(){
            //get the account number from droplist
            let current_account = $('#position-account-select').val();
            $('#position-view').empty();
            axios({
                method: 'get',
                url: `https://api-fxpractice.oanda.com/v3/accounts/${current_account}/openPositions`,
                headers: {
                    'Authorization': 'bearer ' + token,
                    'Content-Type': 'application/json'
                    }
            }).then((res)=>{
                //console.log(res.data.positions);
                $('#position-view').append(
                    `
                    <table id="position-view-table">
                    <tr>
                        <th class="openPosition-header">Market</th>
                        <th class="openPosition-header">Units</th>
                        <th class="openPosition-header">Type</th>
                        <th class="openPosition-header">Price</th>
                        <th class="openPosition-header"></th>
                    </tr>
                    </table>
                    `
                );
                let pos_type;
                let pos_unit;
                let pos_price
                for (let pos_index = res.data.positions.length-1; pos_index >= 0; pos_index--){
                    if (Number(res.data.positions[pos_index].long.units) < Number(res.data.positions[pos_index].short.units)*-1) {
                        pos_type = 'SHORT';
                        pos_unit = Number(res.data.positions[pos_index].short.units) * -1;
                        pos_price = res.data.positions[pos_index].short.averagePrice;
                    } else {
                        pos_type = 'LONG';
                        pos_unit = res.data.positions[pos_index].long.units;
                        pos_price = res.data.positions[pos_index].long.averagePrice;
                    }
                    $('#position-view-table').append(
                        `
                        <tr>
                            <td class="pendingOrder-content">${res.data.positions[pos_index].instrument}</td>
                            <td class="pendingOrder-content">${pos_unit}</td>
                            <td class="pendingOrder-content">${pos_type}</td>
                            <td class="pendingOrder-content">${pos_price}</td>
                            <td class="pendingOrder-content"><button title="Close Position" class="btn-btn secondary" data-toggle="modal" data-target="#closePosition" onclick="loadModal('${current_account}','${res.data.positions[pos_index].instrument}', '${pos_type}')"><i class="fa fa-times" aria-hidden="true"></i></button></td>
                        </tr>
                        `
                    );
                }
            }).catch((err)=>{
                $('#position-view').append(
                    `
                    <div class="col-lg-12 text-center" style="color: red"><i>Cannot access Open Position information</i></div>
                    `
                );
            });
        }

