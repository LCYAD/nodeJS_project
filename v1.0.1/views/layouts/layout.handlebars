            console.log('for loop Done!');
            /*
            if (JSON.parse(data)['type']=='PRICE') {
                chartLive.series[0].addPoint([Date.parse(JSON.parse(data)['time']), parseFloat(JSON.parse(data)['bids'][0]['price'])]);
            }
